<% provide(:title, I18n.t("sign_in")) %>
<h1><%= I18n.t("sign_in") %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email, I18n.t("email") %>
      <%= f.text_field :email %>

      <%= f.label :password, I18n.t("password") %>
      <%= f.password_field :password %>

      <%= f.submit I18n.t("sign_in"), class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%= t("new_user?") %> <%= link_to t("sign_up_now"), signup_path %></p>
  </div>
</div>
