<% provide(:title, t("edit", thing: "user")) %>
<h1><%= t("update_profile") %></h1>

<div class="row">
  <div class = "span6 offset 3">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit t("save"), class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>
