<% provide(:title, @group.name) %>
<h1> <%= @group.name %> </h1>
<ul>
  <% if @group.posts.any? %>
    <% @group.posts.each do |post| %>
      <li><%= link_to post.title, group_post_path(@group.id, post.id) %></li>
    <% end %>
  <% else %>
    <li><%= t('no_posts_message') %></li>
  <% end %>
</ul>

<%= link_to t("members_of_group", name: @group.name), members_path(@group.id) %>
