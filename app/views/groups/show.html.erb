<% provide(:title, 'Group page') %>
<h1> Profile Page for <%= @group.name %> </h1>
<ul>
  <% if @group.posts.any? %>
    <% @group.posts.each do |post| %>
      <li><%= link_to post.title, group_post_path(post.id) %></li>
    <% end %>
  <% else %>
    <li>You haven't made any posts yet</li>
  <% end %>
</ul>

<%= link_to "Members of this group", members_path(@group.id) %>
