<% provide(:title, 'Group members') %>
<h1><%= "Members of #{@group.name}"%></h1>

<ul class ="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
      </li>
    <% end %>
</ul>

<% if signed_in? %>
  <a href= '#', class = "btn">Join this group</a>
<% end %>
