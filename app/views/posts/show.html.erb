<% @species.details.each do |field| %>
  <%= render "posts/show_partials/#{field["format"]}", field: field, post: @post %>
<% end %>

<p>
<%= t("written_by") %> <%= link_to @post.author.name, @post.author %>
</p>

<% if current_user?(@post.author) %>
    <%= link_to t("delete_this", thing: "post"), group_post_path(@post.group.id, @post.id), 
      class: "btn", method: :delete, data: { confirm: t("confirmation") } %>
<% end %>
  
<% @comments.each do |comment| %>
    <p><%= comment.message %></p>
<% end %>

<% if @group.users.include?(current_user) || current_user?(@post.author) %>
  <%= link_to @group.name, @group %>
  <%= form_for @comment, url: group_post_comments_path(@post.group.id, @post.id) do |f|%>
    <%= f.text_area :message %>
    <%= f.submit t("comment"), class: "btn"%>
  <%end%>
<% end %>
